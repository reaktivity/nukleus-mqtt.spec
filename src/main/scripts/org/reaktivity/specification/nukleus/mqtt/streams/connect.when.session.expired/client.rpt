connect await ROUTED_CLIENT
        "nukleus://streams/mqtt#0"
         option nukleus:window 8192
         option nukleus:transmission "duplex"

write nukleus:begin.ext ${mqtt:beginEx()
                              .typeId(nukleus:id("mqtt"))
                              .capabilities("SUBSCRIBE_ONLY")
                              .clientId("one")
                              .topic("$SYS/sessions/" + assignedClientId + "/#")
                              .subscriptionId(0)
                              .build()}
connected

read nukleus:data.ext ${mqtt:dataEx()
                            .typeId(nukleus:id("mqtt"))
                            .topic("$SYS/sessions/" + assignedClientId + "/filters//sensors/1")
                            .expiryInterval(15)
                            .format("TEXT")
                            .build()}
read '{"id":1,"options":0}'

read nukleus:data.ext ${mqtt:dataEx()
                            .typeId(nukleus:id("mqtt"))
                            .topic("$SYS/sessions/" + assignedClientId)
                            .format("TEXT")
                            .build()}
read '{"expiresAt":'/(?<expiresAt>\d+)/',"deliversAt":'/(?<deliversAt>\d+)/'}'

write advise nukleus:flush ${mqtt:flushEx()
                                 .typeId(nukleus:id("mqtt"))
                                 .flags("NO_LOCAL")
                                 .capabilities("PUBLISH_AND_SUBSCRIBE")
                                 .build()}

write nukleus:data.ext ${mqtt:dataEx()
                             .typeId(nukleus:id("mqtt"))
                             .topic("$SYS/sessions/" + assignedClientId)
                             .format("TEXT")
                             .build()}
write '{"expiresAt":123456789,"deliversAt":123456789}'
write flush

connect await ROUTED_CLIENT
        "nukleus://streams/mqtt#0"
         option nukleus:window 8192
         option nukleus:transmission "duplex"

write nukleus:begin.ext ${mqtt:beginEx()
                              .typeId(nukleus:id("mqtt"))
                              .capabilities("SUBSCRIBE_ONLY")
                              .clientId(assignedClientId)
                              .topic("/sensors/1")
                              .subscriptionId(1)
                              .build()}
connected

read nukleus:data.ext ${mqtt:dataEx()
                            .typeId(nukleus:id("mqtt"))
                            .topic("/sensors/1")
                            .expiryInterval(15)
                            .format("TEXT")
                            .build()}
read "message"
