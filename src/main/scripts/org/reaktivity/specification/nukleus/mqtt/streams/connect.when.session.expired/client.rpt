connect await ROUTED_CLIENT
        "nukleus://streams/mqtt#0"
         option nukleus:window 8192
         option nukleus:transmission "duplex"

write nukleus:begin.ext ${mqtt:beginEx()
                              .typeId(nukleus:id("mqtt"))
                              .capabilities("SUBSCRIBE_ONLY")
                              .clientId("123e4567-e89b-42d3-a456-556642440000")
                              .topic("$SYS/sessions/123e4567-e89b-42d3-a456-556642440000/#")
                              .subscriptionId(0)
                              .build()}
connected

write advise nukleus:flush ${mqtt:flushEx()
                                 .typeId(nukleus:id("mqtt"))
                                 .flags("NO_LOCAL")
                                 .capabilities("PUBLISH_AND_SUBSCRIBE")
                                 .build()}

write nukleus:data.ext ${mqtt:dataEx()
                             .typeId(nukleus:id("mqtt"))
                             .topic("$SYS/sessions/123e4567-e89b-42d3-a456-556642440000")
                             .format("TEXT")
                             .build()}
write '{"expiresAt":123456789,"deliversAt":123456789}'
write flush
