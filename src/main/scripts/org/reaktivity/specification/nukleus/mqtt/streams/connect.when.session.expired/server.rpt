property serverTransport "nukleus://streams/target#0"

property assignedClientId "123e4567-e89b-42d3-a456-556642440000"

accept ${serverTransport}
        option nukleus:window 8192
        option nukleus:transmission "duplex"

accepted

read nukleus:begin.ext ${mqtt:beginEx()
                             .typeId(nukleus:id("mqtt"))
                             .capabilities("SUBSCRIBE_ONLY")
                             .clientId(assignedClientId)
                             .topic("$SYS/sessions/" + assignedClientId + "/#")
                             .subscriptionId(0)
                             .build()}
connected

write nukleus:data.ext ${mqtt:dataEx()
                             .typeId(nukleus:id("mqtt"))
                             .topic("$SYS/sessions/" + assignedClientId + "/filters//sensors/1")
                             .expiryInterval(15)
                             .format("TEXT")
                             .build()}
write '{"id":1,"options":0}'
write flush

write nukleus:data.ext ${mqtt:dataEx()
                             .typeId(nukleus:id("mqtt"))
                             .topic("$SYS/sessions/" + assignedClientId)
                             .format("TEXT")
                             .build()}
write '{"expiresAt":123456789,"deliversAt":123456789}'
write flush

read advised nukleus:flush ${mqtt:flushEx()
                                 .typeId(nukleus:id("mqtt"))
                                 .flags("NO_LOCAL")
                                 .capabilities("PUBLISH_AND_SUBSCRIBE")
                                 .build()}

read nukleus:data.ext ${mqtt:dataEx()
                             .typeId(nukleus:id("mqtt"))
                             .topic("$SYS/sessions/" + assignedClientId)
                             .format("TEXT")
                             .build()}
read '{"expiresAt":'/(?<expiresAt>\d+)/',"deliversAt":'/(?<deliversAt>\d+)/'}'

accepted

read nukleus:begin.ext ${mqtt:beginEx()
                             .typeId(nukleus:id("mqtt"))
                             .capabilities("SUBSCRIBE_ONLY")
                             .clientId(assignedClientId)
                             .topic("/sensors/1")
                             .subscriptionId(1)
                             .build()}
connected

write nukleus:data.ext ${mqtt:dataEx()
                             .typeId(nukleus:id("mqtt"))
                             .topic("/sensors/1")
                             .expiryInterval(15)
                             .format("TEXT")
                             .build()}
write "message"
write flush
