property serverTransport "nukleus://streams/target#0"

accept ${serverTransport}
  option nukleus:window 8192
  option nukleus:transmission "duplex"

accepted
connected

read  [0x10 0x1f]                   # CONNECT
      [0x00 0x04] "MQTT"            # protocol name
      [0x05]                        # protocol version
      [0xc2]                        # flags = username, password, clean start
      [0x00 0x3c]                   # keep alive = 60s
      [0x00]                        # properties = none
      [0x00 0x06] "client"          # client id
      [0x00 0x08] "username"        # username
      [0x00 0x08] "password"        # password

write [0x20 0x03]                   # CONNACK
      [0x00]                        # flags = none
      [0x87]                        # reason = not authorized
      [0x00]                        # properties = none

write close
