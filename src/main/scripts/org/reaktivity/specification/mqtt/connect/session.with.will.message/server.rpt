property serverTransport "nukleus://streams/target#0"

accept ${serverTransport}
  option nukleus:window 8192
  option nukleus:transmission "duplex"

accepted
connected

read  [0x10 0x34]                                      # CONNECT
      [0x00 0x04] "MQTT"                               # protocol name
      [0x05]                                           # protocol version
      [0x06]                                           # flags = will flag, clean start
      [0x00 0x3c]                                      # keep alive = 60s
      [0x05]                                           # properties
      [0x11] 10                                        # session expiry interval
      [0x00 0x06] "client"                             # client id
      [0x00]                                           # properties = none
      [0x00 0x18] "$SYS/clients/client/will"           # will topic
      [0x00 0x07] "payload"                            # will payload

write [0x20 0x08]                   # CONNACK
      [0x00]                        # flags = none
      [0x00]                        # reason code
      [0x05]                        # properties
      [0x11] 10                     # session expiry interval
