 connect await ROUTED_SERVER
         "nukleus://streams/mqtt#0"
   option nukleus:window 8192
   option nukleus:transmission "duplex"

 connected

write [0x10 0x16]                    # CONNECT header
      [0x00 0x04] "MQTT"             # protocol name
      [0x05]                         # protocol version
      [0x02]                         # connect flags = clean start
      [0x00 0x3c]                    # keep alive = 60s
      [0x03]                         # properties
      [0x22 0x00 0x01]               # topic alias maximum = 1
      [0x00 0x06] "client"           # clientId

read  [0x20 0x06]                    # CONNACK header
      [0x00]                         # connect flags = none
      [0x00]                         # reason code
      [0x03]                         # properties
      [0x22] 1s                      # topic alias maximum = 1

write [0x30 0x28]                    # PUBLISH header
      [0x00 0x0a] "sensor/one"       # topic name
      [0x13]                         # properties
      [0x02] 0x0f                    # 15 second expiry interval
      [0x03 0x07] "message"          # content type
      [0x01 0x01]                    # payload format indicator: 0 = unspecified bytes, 1 = UTF-8 TEXT
      [0x23 0x00 0x01]               # topic alias = 1
      "message1"                     # payload

write [0x30 0x1e]                    # PUBLISH header
      [0x00 0x00]                    # topic name = empty
      [0x13]                         # properties
      [0x02] 0x0f                    # 15 second expiry interval
      [0x03 0x07] "message"          # content type
      [0x01 0x01]                    # payload format indicator: 0 = unspecified bytes, 1 = UTF-8 TEXT
      [0x23 0x00 0x01]               # topic alias = 1
      "message2"                     # payload

